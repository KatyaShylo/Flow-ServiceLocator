<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/all_characters_fragment">

    <fragment
        android:id="@+id/all_characters_fragment"
        android:name="com.example.rmservicelocator.view.AllCharactersFragment"
        tools:layout="@layout/fragment_all_characters">

        <action
            android:id="@+id/to_detail_fragment"
            app:destination="@id/detail_fragment" />

    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.rmservicelocator.view.DetailsFragment"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>